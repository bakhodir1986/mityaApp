@model IEnumerable<mityaApp.Models.CountryModel>
@{
    ViewBag.Title = "Index";
}

<h2>Главная страница для добавления списка стран Тест</h2>


<p>
    <button style="margin:10px" class="btn btn-white">@Html.ActionLink("Добавить", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            "Ид"
        </th>
        <th>
            "Наименование"
        </th>
        <th>
            "Код"
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

